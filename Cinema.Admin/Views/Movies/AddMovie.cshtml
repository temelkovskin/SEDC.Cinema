@{
    ViewBag.Title = "AddMovie";
}

@using MvcCheckBoxList.Model
@model Cinema.SharedModels.Movie_GenreTheaterDTO

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

<h2>AddMovie</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Styles.Render("~/Content/jqueryui")
        <h4>Movie</h4>
        <hr />


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Movie.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Movie.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Movie.PictureUrl, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Movie.PictureUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Movie.PictureUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Movie.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Movie.Description, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Movie.StartingDate, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Movie.StartingDate, new { @class = "form-control jqueryui-marker-datepicker" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.EndingDate, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Movie.EndingDate, new { @class = "form-control jqueryui-marker-datepicker" })
        </div>


        <h4>Genre</h4>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.GenreId, Model.Genres, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GenreId, "", new { @class = "text-danger" })
            </div>
        </div>


        <h4>Theater</h4>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TheaterId, Model.Theater, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TheaterId, "", new { @class = "text-danger" })
            </div>
        </div>

        @*source --> http://mvccbl.com/Documentation
        Install-Package MvcCheckBoxList*@ 
        <h4>Time at which the movie will be played</h4>
        @Html.CheckBoxListFor(x => x.TimeIntervalsId,
                      x => x.TimeIntervals,
                      x => x.Id,
                      x => x.Hour,
                      x => x.SelectedTimeIntervals,
                      Position.Vertical)


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>


    </div>
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryui")
<script>

    $(document).ready(function () {

        $('.form-control jqueryui-marker-datepicker').datepicker({ dateFormat: 'yy-mm-dd' });
    });
</script>







